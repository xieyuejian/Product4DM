<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.huiju.srm</groupId>
    <artifactId>srm-parent</artifactId>
    <version>6.2.0-SNAPSHOT</version>
    <relativePath>../srm-parent/pom.xml</relativePath>
  </parent>
  <artifactId>srm-deploy</artifactId>

  <scm>
    <url>http://192.168.1.16/svn/prj_SRM_Ent/01_Developing/1.1_Code/trunk/srm-ent/srm-deploy</url>
    <connection>scm:svn:http://192.168.1.16/svn/prj_SRM_Ent/01_Developing/1.1_Code/trunk/srm-ent/srm-deploy</connection>
    <developerConnection>scm:svn:http://192.168.1.16/svn/prj_SRM_Ent/01_Developing/1.1_Code/trunk/srm-ent/srm-deploy</developerConnection>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>
    <!-- 平台 -->
    <dependency>
      <groupId>com.huiju.eapcloud</groupId>
      <artifactId>eapcloud-console</artifactId>
      <classifier>api</classifier>
    </dependency>
    <dependency>
      <groupId>com.huiju.eapcloud</groupId>
      <artifactId>eapcloud-bpm</artifactId>
      <classifier>api</classifier>
      <exclusions>
        <exclusion>
          <groupId>org.activiti</groupId>
          <artifactId>activiti-rest</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.activiti</groupId>
          <artifactId>activiti-bpmn-layout</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.activiti</groupId>
          <artifactId>activiti-json-converter</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.huiju.eapcloud</groupId>
      <artifactId>eapcloud-interaction</artifactId>
      <classifier>api</classifier>
    </dependency>
    <dependency>
      <groupId>com.huiju.eapcloud</groupId>
      <artifactId>eapcloud-notify</artifactId>
      <classifier>api</classifier>
    </dependency>
    <dependency>
      <groupId>com.huiju.eapcloud</groupId>
      <artifactId>eapcloud-portal</artifactId>
      <classifier>api</classifier>
    </dependency>
    <!-- 主数据 -->
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-masterdata</artifactId>
      <classifier>api</classifier>
    </dependency>
    <!-- 业务模块 -->
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-bidding</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-commons</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-finance</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-inquiry</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-purchasing</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-report</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-sourcing</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-system</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-vendor</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-stock</artifactId>
    </dependency>
    <dependency>
      <groupId>com.huiju.srm</groupId>
      <artifactId>srm-appserver</artifactId>
    </dependency>
    <!-- 达梦数据库依赖 -->
    <dependency>
       <groupId>com.dm</groupId>
       <artifactId>dmjdbc8</artifactId>
       <version>1.8.0</version>
    </dependency>
    <dependency>
       <groupId>com.dm.dialect</groupId>
       <artifactId>hibernate5</artifactId>
       <version>5.0</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin </artifactId>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
            <configuration>
              <fork>true</fork>
              <classifier>exec</classifier>
              <mainClass>com.huiju.srm.deploy.SrmDeployApplication</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>